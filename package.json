{
  "devDependencies": {
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "testMatch": [
      "<rootDir>/build/**/*.test.js"
    ],
    "verbose": true
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  },
  "scripts": {
    "build": "rm -rf ./build && tsc -p .",
    "lint": "eslint . --ext ts",
    "test": "jest"
  }
}
